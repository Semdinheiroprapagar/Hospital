# Database Configuration
# Choose 'sqlite' or 'supabase'
DATABASE_TYPE=sqlite

# SQLite Configuration (default)
# No additional configuration needed - uses local hospital.db file

# Supabase Configuration (only needed when DATABASE_TYPE=supabase)
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# JWT Secret for authentication
JWT_SECRET=your-jwt-secret-key

# WhatsApp Configuration (optional - for case analysis notifications)
# Add your WhatsApp number with country code (e.g., 5511999999999 for Brazil)
WHATSAPP_NUMBER=
